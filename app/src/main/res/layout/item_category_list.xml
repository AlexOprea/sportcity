<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_feat_img"
            android:layout_width="@dimen/space_100"
            android:layout_height="@dimen/space_100"
            android:src="@drawable/img_temp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_100"
            android:layout_marginLeft="@dimen/space_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="Title"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/txt_15" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="Description of mine and this is very long to describe. Please describe this and be happy. Description of mine and this is very long to describe. Please describe this and be happy. Description of mine and this is very long to describe. Please describe this and be happy."
                android:textSize="@dimen/txt_12" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_16"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey" />
</LinearLayout>